<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="TabTheme" parent="AppTheme.AppBarOverlay">
        <item name="android:background">@color/primary</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <!-- custom style -->
    <style name="FormField">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/size_small</item>
    </style>

    <style name="FullExpandLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="FullWidthLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FullExpandFromParent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="FullWidthFromParent">
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
    </style>

    <!-- activity_root -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="NavigationDrawer" parent="Widget.Design.NavigationView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="ButtonAuthStyle">
        <item name="android:layout_height">@dimen/button_height_big</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- screen_login -->
    <style name="LoginCardView" parent="FullWidthFromParent">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/size_big</item>
        <item name="android:layout_marginRight">@dimen/size_big</item>
        <item name="android:background">@color/auth_cardview_background</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="LoginControl" parent="FullWidthFromParent">
        <item name="android:layout_height">@dimen/edit_text_size</item>
        <item name="android:layout_marginTop">@dimen/size_normal</item>
        <item name="android:padding">@dimen/size_normal</item>
    </style>

    <style name="RegisterAvatar">
        <item name="android:layout_width">@dimen/register_avatar_size</item>
        <item name="android:layout_height">@dimen/register_avatar_size</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginTop">@dimen/size_normal</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@drawable/register_avatar_background</item>
        <item name="android:padding">@dimen/size_normal</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="WrapContentView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>
