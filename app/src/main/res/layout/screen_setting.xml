<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="model"
            type="im.goody.android.screens.setting.SettingViewModel"/>
    </data>

    <im.goody.android.screens.setting.SettingView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/FullExpandLayout"
        android:background="@color/white">

        <ScrollView
            style="@style/FullWidthFromParent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/setting_alert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textSize="20sp"
                        android:text="@string/setting_alert"/>

                    <CheckBox
                        android:id="@+id/setting_alert_from_subscriber"
                        android:theme="@style/CheckBoxTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/setting_alert_from_subscriber"
                        android:checked="@={model.alertFromSubscriber}"/>

                    <CheckBox
                        android:id="@+id/setting_alert_from_nearby"
                        android:theme="@style/CheckBoxTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/setting_alert_from_nearby"
                        android:checked="@={model.alertFromNearby}"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/setting_notify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textSize="20sp"
                        android:text="@string/setting_notify"/>

                    <CheckBox
                        android:id="@+id/setting_notify_mentions"
                        android:theme="@style/CheckBoxTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/setting_notify_mentions"
                        android:checked="@={model.notifyMentions}"/>

                    <CheckBox
                        android:id="@+id/setting_notify_message"
                        android:theme="@style/CheckBoxTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/setting_notify_message"
                        android:checked="@={model.notifyMessages}"/>

                </LinearLayout>

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/setting_submit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_text_size"
                    android:layout_marginTop="@dimen/size_normal"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/button_login"
                    android:text="@string/setting_submit"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </ScrollView>

    </im.goody.android.screens.setting.SettingView>

</layout>

