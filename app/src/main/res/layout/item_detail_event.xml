<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="im.goody.android.utils.DateUtils" />

        <import type="android.view.View" />

        <variable
            name="data"
            type="im.goody.android.screens.detail_post.DetailPostBodyViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <im.goody.android.ui.views.CircleImageView
            android:id="@+id/detail_event_avatar"
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:layout_marginLeft="@dimen/size_normal"
            android:layout_marginStart="@dimen/size_normal"
            android:layout_marginTop="12dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/content_avatar"
            android:src="@drawable/round_drawable"
            app:author_avatar="@{data.deal.author.avatarUrl}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/detail_event_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_small"
            android:layout_marginStart="@dimen/size_small"
            android:text="@{data.deal.author.name}"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/secondary_text"
            app:layout_constraintLeft_toRightOf="@+id/detail_event_avatar"
            app:layout_constraintTop_toTopOf="@+id/detail_event_avatar"
            tools:text="User name" />

        <TextView
            android:id="@+id/item_event_create_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="@{DateUtils.getReadableDate(data.deal.date)}"
            app:layout_constraintBottom_toBottomOf="@+id/detail_event_avatar"
            app:layout_constraintLeft_toLeftOf="@+id/detail_event_user_name"
            app:layout_constraintTop_toBottomOf="@+id/detail_event_user_name"
            app:layout_constraintVertical_bias="0.5"
            tools:text="DD MM, YYYY" />

        <LinearLayout
            android:id="@+id/detail_event_participants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_normal"
            android:layout_marginRight="@dimen/size_normal"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/detail_event_avatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/detail_event_avatar"
            app:participants="@{data.lastParticipants}"
            tools:layout_width="60dp" />

        <TextView
            android:id="@+id/detail_event_participants_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/rounded_border_rectangle_accent"
            android:paddingBottom="@dimen/size_little"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="@dimen/size_little"
            android:text="@{@string/participants_count(data.participantsCount - 3)}"
            android:textColor="@color/primary"
            android:visibility="@{data.participantsCount > 3 ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@+id/detail_event_avatar"
            app:layout_constraintEnd_toStartOf="@+id/detail_event_participants"
            app:layout_constraintTop_toTopOf="@+id/detail_event_avatar"
            tools:text="+ 123">

        </TextView>

        <ImageView
            android:id="@+id/detail_event_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/item_image_description"
            android:scaleType="centerCrop"
            android:src="@color/placeholder_color"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_event_avatar"
            app:layout_goneMarginTop="0dp"
            app:post_image="@{data.deal}" />

        <im.goody.android.ui.views.AutoLinkTextView
            android:id="@+id/detail_event_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_normal"
            android:layout_marginRight="@dimen/size_normal"
            android:layout_marginTop="16dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
            android:textIsSelectable="true"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_event_image"
            app:link_text="@{data.deal.description}"
            tools:text="@tools:sample/lorem[30]" />

        <TextView
            android:id="@+id/detail_event_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_normal"
            android:layout_marginLeft="@dimen/size_normal"
            android:layout_marginRight="@dimen/size_normal"
            android:layout_marginStart="@dimen/size_normal"
            android:layout_marginTop="@dimen/size_small"
            android:gravity="center_vertical"
            android:textColor="@color/primary_text"
            app:event_date="@{data.deal.event.date}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_event_description"
            tools:text="DD MM YYY HH:mm" />

        <TextView
            android:id="@+id/detail_event_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_small"
            android:background="?android:attr/selectableItemBackground"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:drawablePadding="@dimen/size_small"
            android:drawableRight="@drawable/ic_arrow_right"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/size_normal"
            android:paddingRight="@dimen/size_normal"
            android:textColor="@color/primary_text"
            app:address="@{data.deal.location}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_event_date"
            tools:text="Location" />

        <include
            android:id="@+id/phone_info_panel"
            layout="@layout/phone_info_panel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_normal"
            android:layout_marginRight="@dimen/size_normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_event_location"
            bind:viewModel="@{data.phoneInfoViewModel}" />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/tag_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_normal"
            android:layout_marginStart="@dimen/size_normal"
            android:layout_marginTop="@dimen/size_small"
            app:flexDirection="row"
            app:flexWrap="wrap"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phone_info_panel"
            app:tags="@{data.deal.event.resources}"
            tools:layout_height="50dp" />

        <include
            android:id="@+id/action_panel"
            layout="@layout/item_action_panel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tag_container"
            bind:viewModel="@{data.panelViewModel}" />

        <Button
            android:id="@+id/detail_event_join"
            android:layout_width="0dp"
            android:layout_height="@dimen/join_height"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="@dimen/size_normal"
            android:layout_marginStart="@dimen/size_normal"
            android:layout_marginTop="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/white"
            android:visibility="@{data.deal.owner ? View.GONE : View.VISIBLE}"
            app:join_participates="@{data.participates}"
            app:join_status="@{data.state}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/action_panel"
            app:layout_constraintTop_toBottomOf="@+id/tag_container"
            tools:background="@drawable/join_active"
            tools:text="@string/active_join" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/size_divider"
            android:background="@color/divider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/action_panel"
            app:layout_constraintVertical_bias="1.0" />
    </android.support.constraint.ConstraintLayout>
</layout>