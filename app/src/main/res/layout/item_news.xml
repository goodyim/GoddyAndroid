<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/news_item_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginStart="@dimen/medium_margin"
            android:drawableLeft="@drawable/ic_heart"
            android:drawablePadding="@dimen/textview_drawable_padding"
            android:drawableStart="@drawable/ic_comment_24dp"
            android:gravity="center_vertical"
            android:textColor="@color/secondary_text"
            app:layout_constraintBottom_toBottomOf="@+id/news_item_likes"
            app:layout_constraintLeft_toRightOf="@+id/news_item_likes"
            app:layout_constraintTop_toTopOf="@+id/news_item_likes"
            tools:text="362" />

        <ImageView
            android:id="@+id/news_item_user_avatar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/medium_margin"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginTop="@dimen/medium_margin"
            android:contentDescription="@string/news_item_avatar_description"
            app:layout_constraintBottom_toTopOf="@+id/news_item_title"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/round_drawable" />

        <TextView
            android:id="@+id/news_item_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginStart="@dimen/medium_margin"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintLeft_toRightOf="@+id/news_item_user_avatar"
            app:layout_constraintTop_toTopOf="@+id/news_item_user_avatar"
            tools:text="User name" />

        <TextView
            android:id="@+id/news_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="@dimen/small_margin"
            app:layout_constraintBottom_toBottomOf="@+id/news_item_user_avatar"
            app:layout_constraintLeft_toLeftOf="@+id/news_item_user_name"
            app:layout_constraintTop_toBottomOf="@+id/news_item_user_name"
            tools:text="DD MM, YYYY" />

        <TextView
            android:id="@+id/news_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cardview_head_height"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/primary_text"
            app:layout_constraintLeft_toLeftOf="@+id/news_item_user_avatar"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Title goes here" />

        <ImageView
            android:id="@+id/news_item_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/medium_margin"
            android:adjustViewBounds="true"
            android:contentDescription="@string/news_item_image_description"
            android:visibility="visible"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/news_item_title"
            app:srcCompat="@color/divider" />

        <TextView
            android:id="@+id/news_item_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/medium_padding"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/primary_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/news_item_image"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent quis egestas dui, nec commodo sem. Sed in velit metus. Nulla varius vehicula tortor, ut dapibus purus hendrerit vitae. Praesent iaculis." />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/medium_margin"
            android:background="@color/divider"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/news_item_description" />

        <ImageView
            android:id="@+id/news_item_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_marginStart="@dimen/medium_margin"
            android:contentDescription="@string/news_item_share_description"
            app:layout_constraintBottom_toBottomOf="@+id/news_item_likes"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/news_item_comments"
            app:layout_constraintRight_toLeftOf="@+id/news_item_join"
            app:layout_constraintTop_toTopOf="@+id/news_item_likes"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_share_24dp" />

        <Button
            android:id="@+id/news_item_join"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginRight="@dimen/small_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:text="@string/join"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <TextView
            android:id="@+id/news_item_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/medium_margin"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginTop="@dimen/medium_margin"
            android:drawableLeft="@drawable/ic_heart"
            android:drawablePadding="@dimen/textview_drawable_padding"
            android:drawableStart="@drawable/ic_heart"
            android:gravity="center_vertical"
            android:textColor="@color/secondary_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/divider"
            tools:text="100K" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginRight="@dimen/small_margin"
            android:layout_marginTop="@dimen/medium_margin"
            android:adjustViewBounds="true"
            android:contentDescription="@string/news_item_more_description"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_more_24dp" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
