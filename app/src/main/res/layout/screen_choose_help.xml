<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="im.goody.android.screens.choose_help.ChooseHelpViewModel" />

        <import type="android.view.View" />
    </data>

    <im.goody.android.screens.choose_help.ChooseHelpView style="@style/FullExpandLayout">

        <ScrollView style="@style/FullExpandFromParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/auth_header_height"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/auth_header" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_normal"
                    android:layout_marginRight="@dimen/size_normal"
                    android:layout_marginTop="@dimen/size_medium"
                    android:text="@string/choose_help_title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_normal"
                    android:layout_marginRight="@dimen/size_normal"
                    android:layout_marginTop="@dimen/size_normal"
                    android:text="@string/preset_tags_title" />


                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/preset_tag_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_normal"
                    android:layout_marginRight="@dimen/size_normal"
                    app:flexDirection="row"
                    app:flexWrap="wrap"
                    tools:layout_height="100dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_normal"
                    android:layout_marginRight="@dimen/size_normal"
                    android:layout_marginTop="@dimen/size_normal"
                    android:text="@string/custom_tags_title" />

                <TextView
                    android:id="@+id/add_tag"
                    style="@style/Base.TextAppearance.AppCompat.Widget.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_normal"
                    android:layout_marginStart="@dimen/size_normal"
                    android:background="?selectableItemBackground"
                    android:drawableLeft="@drawable/ic_add_accent"
                    android:drawablePadding="@dimen/size_small"
                    android:drawableStart="@drawable/ic_add_accent"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/size_small"
                    android:paddingEnd="@dimen/size_small"
                    android:paddingRight="@dimen/size_small"
                    android:text="@string/add_tag"
                    android:paddingTop="@dimen/size_small"
                    android:textColor="@color/secondary_text"
                    tools:ignore="RtlSymmetry" />


                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/tag_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_normal"
                    android:layout_marginRight="@dimen/size_normal"
                    app:flexDirection="row"
                    app:flexWrap="wrap"
                    tools:layout_height="100dp" />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_normal"
                    android:layout_marginStart="@dimen/size_normal"
                    android:layout_marginTop="@dimen/size_medium"
                    android:checked="@={viewModel.isGeoEnabled}"
                    android:paddingLeft="@dimen/size_little"
                    android:paddingStart="@dimen/size_little"
                    android:text="@string/enable_geo_title"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/choose_help_location"
                    style="@style/LoginControl"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="@dimen/size_normal"
                    android:layout_marginLeft="@dimen/size_normal"
                    android:layout_marginRight="@dimen/size_normal"
                    android:layout_marginStart="@dimen/size_normal"
                    android:background="@drawable/rounded_border_rectangle"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:paddingLeft="@dimen/size_normal"
                    android:paddingStart="@dimen/size_normal"
                    android:visibility="@{viewModel.isGeoEnabled ? View.VISIBLE : View.GONE}"
                    app:event_location="@{viewModel.place}"
                    tools:ignore="RtlSymmetry"
                    tools:text="Moscow" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_normal"
                    android:layout_marginStart="@dimen/size_normal"
                    android:layout_marginTop="@dimen/size_normal"
                    android:text="@string/distance_title"
                    android:visibility="@{viewModel.isGeoEnabled ? View.VISIBLE : View.GONE}" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="@{viewModel.isGeoEnabled ? View.VISIBLE : View.GONE}"
                    android:orientation="horizontal">

                    <SeekBar
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_normal"
                        android:layout_marginRight="@dimen/size_small"
                        android:layout_marginEnd="@dimen/size_small"
                        android:layout_marginStart="@dimen/size_normal"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:max="100"
                        android:padding="@dimen/size_small"
                        android:progress="@={viewModel.radius}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/size_normal"
                        android:layout_marginRight="@dimen/size_normal"
                        android:layout_gravity="center_vertical"
                        android:text="@{@string/distance_value(viewModel.radius)}"
                        tools:text="100 km" />

                </LinearLayout>

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/choose_help_submit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_text_size"
                    android:layout_marginLeft="@dimen/size_normal"
                    android:layout_marginRight="@dimen/size_normal"
                    android:layout_marginTop="@dimen/size_normal"
                    android:background="@drawable/button_login"
                    android:text="@string/submit"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/choose_help_skip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginBottom="@dimen/size_normal"
                    android:layout_marginEnd="@dimen/size_normal"
                    android:layout_marginLeft="@dimen/size_small"
                    android:layout_marginRight="@dimen/size_normal"
                    android:layout_marginStart="@dimen/size_small"
                    android:layout_marginTop="@dimen/size_small"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/size_small"
                    android:paddingTop="@dimen/size_small"
                    android:text="@string/skip" />
            </LinearLayout>

        </ScrollView>
    </im.goody.android.screens.choose_help.ChooseHelpView>
</layout>