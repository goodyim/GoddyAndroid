<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="user"
            type="im.goody.android.screens.login.LoginViewModel" />
    </data>

    <im.goody.android.screens.login.LoginView
        android:id="@+id/sign_in_container"
        style="@style/FullExpandLayout"
        android:background="@color/white">

        <ScrollView
            style="@style/FullWidthFromParent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/sign_in_redirect_title"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/sign_in_header"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/auth_header_height"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/auth_header" />

                <TextView
                    android:id="@+id/sign_in_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_normal"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="32dp"
                    android:text="@string/app_name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sign_in_header" />

                <TextView
                    android:id="@+id/sign_in_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/login_subtitle"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="@+id/sign_in_title"
                    app:layout_constraintTop_toBottomOf="@+id/sign_in_title" />

                <EditText
                    android:id="@+id/sign_in_name"
                    style="@style/LoginControl"
                    android:layout_marginEnd="@dimen/size_medium"
                    android:layout_marginRight="@dimen/size_medium"
                    android:layout_marginTop="@dimen/size_big"
                    android:background="@drawable/rounded_border_rectangle"
                    android:ems="10"
                    android:hint="@string/name_login_hint"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:nextFocusDown="@+id/sign_in_password"
                    android:text="@={user.name}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/sign_in_subtitle"
                    app:layout_constraintTop_toBottomOf="@+id/sign_in_subtitle" />

                <EditText
                    android:id="@+id/sign_in_password"
                    style="@style/LoginControl"
                    android:layout_marginTop="@dimen/size_medium"
                    android:background="@drawable/rounded_border_rectangle"
                    android:hint="@string/password_hint"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:text="@={user.password}"
                    app:layout_constraintEnd_toEndOf="@+id/sign_in_name"
                    app:layout_constraintStart_toStartOf="@+id/sign_in_name"
                    app:layout_constraintTop_toBottomOf="@+id/sign_in_name" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/sign_in_submit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="@dimen/size_small"
                    android:layout_marginRight="@dimen/size_small"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/button_login"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="@string/login_submit"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/guideline"
                    app:layout_constraintStart_toStartOf="@+id/sign_in_password"
                    app:layout_constraintTop_toBottomOf="@+id/sign_in_password" />

                <TextView
                    android:id="@+id/sign_in_forgot_password"
                    style="@style/FullWidthFromParent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="16dp"
                    android:gravity="start"
                    android:text="@string/login_forgot_password"
                    android:textColor="@color/secondary_text"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/sign_in_submit"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/guideline"
                    app:layout_constraintTop_toTopOf="@+id/sign_in_submit" />

                <android.support.constraint.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.45" />

            </android.support.constraint.ConstraintLayout>
        </ScrollView>

        <TextView
            android:id="@+id/sign_in_redirect_title"
            style="@style/FullWidthFromParent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:text="@string/login_redirect"
            android:textColor="@color/secondary_text"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/sign_in_redirect_action"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/sign_in_redirect_action"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_border_rectangle"
            android:foreground="?attr/selectableItemBackground"
            android:text="@string/register_action"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/sign_in_redirect_title"
            app:layout_constraintStart_toStartOf="@+id/sign_in_redirect_title" />

    </im.goody.android.screens.login.LoginView>
</layout>