<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sign_up_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="@dimen/auth_cardview_horizontal_margin"
        android:layout_marginRight="@dimen/auth_cardview_horizontal_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:background="@color/auth_cardview_background"
        app:layout_constraintBottom_toTopOf="@+id/appCompatTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/register_image"
                android:layout_width="@dimen/register_avatar_size"
                android:layout_height="@dimen/register_avatar_size"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/medium_margin"
                android:adjustViewBounds="false"
                android:background="@drawable/register_avatar_background"
                android:contentDescription="@string/register_avatar_description"
                android:padding="@dimen/medium_padding"
                android:tint="@color/accent"
                app:layout_constraintLeft_toLeftOf="@+id/register_email"
                app:layout_constraintRight_toRightOf="@+id/register_email"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_add_24dp" />

            <EditText
                android:id="@+id/register_email"
                android:layout_width="0dp"
                android:layout_height="@dimen/edit_text_height_big"
                android:layout_marginEnd="@dimen/medium_margin"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginRight="@dimen/medium_margin"
                android:layout_marginStart="@dimen/medium_margin"
                android:layout_marginTop="@dimen/auth_form_views_margin_top"
                android:background="@drawable/auth_field_background"
                android:hint="@string/email_hint"
                android:inputType="textEmailAddress"
                android:padding="@dimen/medium_padding"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/register_image" />

            <EditText
                android:id="@+id/register_name"
                android:layout_width="0dp"
                android:layout_height="@dimen/edit_text_height_big"
                android:layout_marginTop="@dimen/auth_form_views_margin_top"
                android:background="@drawable/auth_field_background"
                android:ems="10"
                android:hint="@string/name_hint"
                android:inputType="textPersonName"
                android:padding="@dimen/medium_padding"
                app:layout_constraintLeft_toLeftOf="@+id/register_email"
                app:layout_constraintRight_toRightOf="@+id/register_email"
                app:layout_constraintTop_toBottomOf="@+id/register_email" />

            <EditText
                android:id="@+id/register_password"
                android:layout_width="0dp"
                android:layout_height="@dimen/edit_text_height_big"
                android:layout_marginTop="@dimen/auth_form_views_margin_top"
                android:background="@drawable/auth_field_background"
                android:hint="@string/password_hint"
                android:inputType="textPassword"
                android:padding="@dimen/medium_padding"
                app:layout_constraintLeft_toLeftOf="@+id/register_name"
                app:layout_constraintRight_toRightOf="@+id/register_name"
                app:layout_constraintTop_toBottomOf="@+id/register_name" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/register_submit"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_big"
                android:layout_marginBottom="@dimen/medium_margin"
                android:layout_marginTop="@dimen/auth_form_views_margin_top"
                android:text="@string/go"
                android:textColor="@color/white"
                app:backgroundTint="@color/accent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/register_password"
                app:layout_constraintRight_toRightOf="@+id/register_password"
                app:layout_constraintTop_toBottomOf="@+id/register_password" />


        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/appCompatTextView"
        style="@style/FacebookAuthStyle"
        android:layout_width="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
